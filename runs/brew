#!/usr/bin/env bash

if ! command -v brew &> /dev/null; then
    echo "installing brew"
    /bin/bash -c "$(curl -fsSL https://raw.githubusercontent.com/Homebrew/install/HEAD/install.sh)"
fi

brew update &> /dev/null
brew install \
    bat \
    fzf \
    gh \
    golang-migrate \
    httpie \
    lua-language-server \
    lsd \
    rg \
    tree \
    watchman \
    &> /dev/null

